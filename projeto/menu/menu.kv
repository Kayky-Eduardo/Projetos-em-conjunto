<Menu>:
    FloatLayout:
        Image:
            source: 'projeto/img/fundo.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}


        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 800, 400
            pos_hint:  {'center_x': 0.5, 'center_y': 0.5}
            spacing: 5

            Label:
                text:'M E N U'
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size: 150
                font_name: "fonte/fontetitulo"
           
            Button:
                text: 'CADASTRAR'
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                font_size: 20
                on_press: root.manager.current= 'Menu_cadastros'
                background_color: 0.5, 0.5, 0.5, 8
                font_name: "fonte/fontebotao"

            Button:
                text: 'RELATORIO'
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 8
                font_name: "fonte/fontebotao"

            Button:
                font_size: 20
                text: 'SAIR'
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                on_press: app.stop() # app fecha
                background_color: 0.5, 0.5, 0.5, 8
                font_name: "fonte/fontebotao"
