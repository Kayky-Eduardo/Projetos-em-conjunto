<Cadastro_Compra>
    compra_id: compra_id
    produto_id: produto_id
    qntd_produto: qntd_produto
    enviar: enviar
    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'Compra ID(tempor√°rio):'

        TextInput:
            id: compra_id
            multiline: False

        Label:
            text:'Digite o id do produto: '
        
        TextInput:
            id: produto_id
            multiline: False

        Label:
            text:'Quantidade do produto: '

        TextInput:
            id: qntd_produto
            multiline: False
            hint_text: 'Ex: 1 2 3'

    Button:
        id: enviar
        text: 'Enviar'
        font_size: 20
        on_press: root.adicionar_banco()