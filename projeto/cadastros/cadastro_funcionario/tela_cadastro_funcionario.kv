<Tela_Cadastro_Funcionario>:
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Button:
            text: 'Carregar funcionários'
            size_hint_y: None
            on_press: root.atualizar_dados()
            
            height: '40dp'

        ScrollView:
            GridLayout:
                id: container
                spacing: '30dp'
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True
                cols: 1 
        Button:
            text: 'Ir para cadastro de funcionário'
            size_hint_y: None
            height: "40dp"
            on_press: root.manager.current = "cadastro_funcionario"

        Button:
            text: 'Voltar'
            size_hint_y: None
            height: "40dp"
            on_press: root.manager.current = "Menu_cadastros"