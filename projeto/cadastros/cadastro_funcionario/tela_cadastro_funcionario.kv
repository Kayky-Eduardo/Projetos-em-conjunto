<Tela_Cadastro_Funcionario>:
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Button:
            text: 'CARREGAR FUNCIONÁRIOS'
            size_hint_y: None
            on_press: root.atualizar_dados()
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"
            
            height: '40dp'

        ScrollView:
            GridLayout:
                id: container
                spacing: '30dp'
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True
                cols: 1 
        Button:
            text: 'CADASTRAR FUNCIONÁRIO'
            size_hint_y: None
            height: "40dp"
            on_press: root.manager.current = "cadastro_funcionario"
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"

        Button:
            text: 'VOLTAR'
            size_hint_y: None
            height: "40dp"
            on_press: root.manager.current = "Menu_cadastros"
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"