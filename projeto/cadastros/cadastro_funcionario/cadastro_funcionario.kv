<Cadastro_Funcionario>
    cols: 1
    cpf: cpf
    cargo_id: cargo_id
    nome: nome
    salario: salario
    senha: senha
    confirmar_senha: confirmar_senha
    data_admissao: data_admissao
    fim_contrato: fim_contrato
    enviar: enviar

    GridLayout:
        cols: 2
        
        Label:
            text:'Nome:'

        TextInput:
            id: nome
            hint_text: 'Digite o nome '
            multiline: False

        Label:
            text:'Digite o CPF: '
        
        TextInput:
            id: cpf
            multiline: False
            hint_text: 'Digite o CPF'

        Label:
            text:'Digite a senha: '

        TextInput:
            id: senha
            hint_text: 'Digite a senha'
            multiline: False
            password: True

        Label:
            text:'Confirmar senha: '

        TextInput:
            id: confirmar_senha
            multiline: False
            hint_text: 'Confirmar senha'
            password: True

        Label:
            text:'Salário: '

        TextInput:
            id: salario
            multiline: False
            hint_text: 'Digite o salário'

        Label:
            text:'Cargo ID: '

        TextInput:
            id: cargo_id
            multiline: False
            hint_text: 'Digite o cargo_id'

        Label:
            text:'Data admissão: '

        TextInput:
            id: data_admissao
            multiline: False
            hint_text: 'aaaa-mm-dd'

        Label:
            text: 'Fim do contrato: '
            
        TextInput:
            id: fim_contrato
            multiline: False
            hint_text: 'aaaa-mm-dd'

        Button:
            id: enviar
            text: 'ENVIAR'
            font_size: 30
            on_press: root.adicionar_banco()
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"
        
        Button:
            text: 'VOLTAR'
            font_size: 30
            on_press: root.manager.current= 'telacadastro_funcionario'
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"
