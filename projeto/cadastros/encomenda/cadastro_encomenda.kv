<Cadastro_Encomenda>:
    name: "cadastro"
    cliente_cpf: cliente_cpf
    produto_id: produto_id
    qntd_produto: qntd_produto
    data_pedido: data_pedido
    data_entrega: data_entrega
    enviar: enviar
    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'CPF do cliente:'
            height: '30dp'

        TextInput:
            id: cliente_cpf
            multiline: False
            height: '30dp'

        Label:
            text:'Produto ID: '
            height: '30dp'

        TextInput:
            id: produto_id
            multiline: False
            height: '30dp'

        Label:
            text:'Quantidade: '
            height: '30dp'

        TextInput:
            id: qntd_produto
            multiline: False
            height: '30dp'
            
        Label:
            text: 'Data pedido: '
            height: '30dp'

        TextInput:
            id: data_pedido
            multiline: False
            height: '30dp'
            hint_text: 'yyyy-mm-aa'

        Label:
            text: 'Data entrega: '
            height: '30dp'

        TextInput:
            id: data_entrega
            multiline: False
            height: '30dp'
            hint_text: 'yyyy-mm-aa'

        Button:
            id: enviar
            text: 'ENVIAR'
            font_size: 30
            size_hint_y: None
            on_press: root.adicionar_banco()
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"

        Button:
            text: 'VOLTAR'
            size_hint_y: None
            font_size: 30
            on_press: root.manager.current = "telacadastro_encomenda"
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"