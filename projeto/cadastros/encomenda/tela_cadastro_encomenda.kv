ScreenManager:
    Tela_Cadastro_encomenda:
    Cadastro_Encomenda:

<Tela_Cadastro_encomenda>:
    name: "estoque"
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Button:
            text: 'Carregar encomendas'
            size_hint_y: None
            on_press: root.atualizar_dados()
            height: '40dp'

        ScrollView:
            GridLayout:
                id: container
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True

        Button:
            text: 'Ir para Cadastro de encomenda'
            size_hint_y: None
            height: "40dp"
            on_press: app.root.current = "cadastro"

<Cadastro_Encomenda>:
    name: "cadastro"
    cliente_cpf: cliente_cpf
    produto_id: produto_id
    qntd_produto: qntd_produto
    data_pedido: data_pedido
    data_entrega: data_entrega
    enviar: enviar
    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'CPF do cliente:'
            height: '30dp'

        TextInput:
            id: cliente_cpf
            multiline: False
            height: '30dp'

        Label:
            text:'Produto ID: '
            height: '30dp'

        TextInput:
            id: produto_id
            multiline: False
            height: '30dp'

        Label:
            text:'Quantidade: '
            height: '30dp'

        TextInput:
            id: qntd_produto
            multiline: False
            height: '30dp'
            
        Label:
            text: 'Data pedido: '
            height: '30dp'

        TextInput:
            id: data_pedido
            multiline: False
            height: '30dp'
            hint_text: 'yyyy-mm-aa'

        Label:
            text: 'Data entrega: '
            height: '30dp'

        TextInput:
            id: data_entrega
            multiline: False
            height: '30dp'
            hint_text: 'yyyy-mm-aa'

        Button:
            id: enviar
            text: 'Enviar'
            font_size: 20
            size_hint_y: None
            on_press: root.adicionar_banco()

        Button:
            text: 'Voltar para Estoque'
            size_hint_y: None
            on_press: app.root.current = "estoque"
