<Cadastro_Cliente>:
    name: "cadastro"
    cliente_cpf: cliente_cpf
    tel1: tel_
    tel2: tel__
    email: email
    enviar: enviar
    cols: 1


    GridLayout:
        cols: 2
        
        Label:
            text:'CPF:'
            height: '30dp'

        TextInput:
            id: cliente_cpf
            multiline: False
            height: '30dp'

        Label:
            text:'Telefone: '
            height: '30dp'

        TextInput:
            id: tel_
            multiline: False
            height: '30dp'

        Label:
            text:'Telefone 2: '
            height: '30dp'

        TextInput:
            id: tel__
            multiline: False
            height: '30dp'

        Label:
            text: 'Email: '
            height: '30dp'

        TextInput:
            id: email
            multiline: False
            height: '30dp'

    Button:
        id: enviar
        text: 'Enviar'
        font_size: 20
        on_press: root.adicionar_banco()