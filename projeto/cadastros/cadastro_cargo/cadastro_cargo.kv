<Cadastro_Cargo>:
    name: "cadastro"
    nome_cargo: nome_cargo
    setor_id: setor_id
    enviar: enviar
    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'Nome do cargo: '
            height: '30dp'

        TextInput:
            id: nome_cargo
            multiline: False
            height: '30dp'

        Label:
            text:'ID do setor: '
            height: '30dp'

        TextInput:
            id: setor_id
            multiline: False
            height: '30dp'

        Label:
            text: 'CLT'

        CheckBox:
            on_active: root.set_tipo_contrato('clt', self.active)
            group: 'tipo_contrato'

        Label:
            text: 'PJ'

        CheckBox:
            on_active: root.set_tipo_contrato('pj', self.active)
            group: 'tipo_contrato'

        Button:
            id: enviar
            text: 'ENVIAR'
            font_size: 30
            size_hint_y: None
            on_press: root.adicionar_banco()
            background_color: 0.9, 1.20, 1.39, 7
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"

        Button:
            text: 'VOLTAR'
            size_hint_y: None
            on_press: root.manager.current = "telacadastro_cargo"
            background_color: 0.5, 0.5, 0.5, 1
            font_size: 30
            font_name: "fonte/fontebotao"
