<Cadastro_Cargo>
    cargo_id: cargo_id
    nome_cargo: nome_cargo
    setor_id: setor_id
    enviar: enviar
    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'ID do cargo:'

        TextInput:
            id: cargo_id
            hint_text: 'Digite o id '
            multiline: False

        Label:
            text:'Digite o nome do cargo: '
        
        TextInput:
            id: nome_cargo
            multiline: False
            hint_text: 'Digite o nome do cargo'

        Label:
            text:'O ID do setor: '

        TextInput:
            id: setor_id
            multiline: False
            hint_text: 'Digite o id do setor'   

        Label:
            text: 'CLT'

        CheckBox:
            on_active: root.set_tipo_contrato('clt', self.active)
            group: 'tipo_contrato'

        Label:
            text: 'PJ'

        CheckBox:
            on_active: root.set_tipo_contrato('pj', self.active)
            group: 'tipo_contrato'

    Button:
        id: enviar
        text: 'Enviar'
        font_size: 20
        on_press: root.adicionar_banco()