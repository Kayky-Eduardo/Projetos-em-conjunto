<Cadastro_Venda>:
    name: "cadastro"
    funcionario_cpf: funcionario_cpf
    cliente_cpf: cliente_cpf
    compra_id: compra_id
    enviar: enviar
    cols: 1

    GridLayout:
        cols: 2

        Label:
            text:'Digite o CPF do funcion√°rio: '
        
        TextInput:
            id: funcionario_cpf
            multiline: False

        Label:
            text:'Digite o CPF do cliente: '

        TextInput:
            id: cliente_cpf
            multiline: False

        Label:
            text: 'Digite o ID da compra:  '

        TextInput:
            id: compra_id
            multiline: False

        Button:
            id: enviar
            text: 'Enviar'
            font_size: 20
            size_hint_y: None
            on_press: root.adicionar_banco()

        Button:
            text: 'Voltar para Vendas'
            size_hint_y: None
            on_press: app.root.current = "telacadastro_venda" 
