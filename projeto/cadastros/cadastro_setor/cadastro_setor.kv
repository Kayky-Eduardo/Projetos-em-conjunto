<Cadastro_Setor>
    cols: 1
    nome_setor: nome_setor
    nome_responsavel: nome_responsavel
    enviar: enviar
    
    GridLayout:
        cols: 2

        Label:
            text:'Digite o nome do setor: '
        
        TextInput:
            id: nome_setor
            multiline: False
            hint_text: 'Digite o nome do setor'

        Label:
            text:'Digite o nome do respons√°vel do setor: '

        TextInput:
            id: nome_responsavel
            hint_text: 'Digite o nome do responsavel'
            multiline: False

        Button:
            id: enviar
            text: 'ENVIAR'
            font_size: 30
            on_press: root.adicionar_banco()
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"
        
        Button:
            text: 'VOLTAR'
            font_size: 30
            on_press: root.manager.current = "telacadastro_setor"
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"