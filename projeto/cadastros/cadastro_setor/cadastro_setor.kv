<Cadastro_Setor>
    cols: 1
    setor_id: setor_id
    nome_setor: nome_setor
    nome_responsavel: nome_responsavel
    enviar: enviar
    
    GridLayout:
        cols: 2
        
        Label:
            text:'ID do setor:'

        TextInput:
            id: setor_id
            hint_text: 'Digite o id '
            multiline: False

        Label:
            text:'Digite o nome do setor: '
        
        TextInput:
            id: nome_setor
            multiline: False
            hint_text: 'Digite o nome do setor'

        Label:
            text:'Digite o nome do respons√°vel do setor: '

        TextInput:
            id: nome_responsavel
            hint_text: 'Digite o nome do responsavel'
            multiline: False

        Button:
            id: enviar
            text: 'Enviar'
            font_size: 20
            on_press: root.adicionar_banco()
        
        Button:
            text: 'Voltar'
            font_size: 20
            on_press: root.manager.current = "Menu_cadastros"