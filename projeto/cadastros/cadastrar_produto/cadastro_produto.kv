    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'Produto ID:'

        TextInput:
            id: produto_id
            multiline: False

        Label:
            text:'Digite o nome do produto: '
        
        TextInput:
            id: nome_produto
            multiline: False

        Label:
            text:'tipo do produto: '

        TextInput:
            id: tipo_produto
            multiline: False

        Label:
            text: 'Pre√ßo produto: '

        TextInput:
            id: preco_produto
            multiline: False

    Button:
        id: enviar
        text: 'Enviar'
        font_size: 20
        on_press: root.adicionar_banco()
        background_color: 0.5, 0.5, 0.7, 1