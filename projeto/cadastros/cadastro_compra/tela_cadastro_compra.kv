ScreenManager:
    Tela_Cadastro_Compra:
    Cadastro_Compra:

<Tela_Cadastro_Compra>:
    name: "estoque"
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Button:
            text: 'Carregar compras'
            size_hint_y: None
            on_press: root.atualizar_dados()
            height: '40dp'

        ScrollView:
            GridLayout:
                id: container
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True

        Button:
            text: 'Ir para cadastro de compras'
            size_hint_y: None
            height: "40dp"
            on_press: app.root.current = "cadastro"

<Cadastro_Compra>:
    name: "cadastro"
    compra_id: compra_id
    produto_id: produto_id
    qntd_produto: qntd_produto
    enviar: enviar
    cols: 1

    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'ID da compra:'
            height: '30dp'

        TextInput:
            id: compra_id
            multiline: False
            height: '30dp'

        Label:
            text:'Produto ID: '
            height: '30dp'

        TextInput:
            id: produto_id
            multiline: False
            height: '30dp'

        Label:
            text:'Quantidade: '
            height: '30dp'

        TextInput:
            id: qntd_produto
            multiline: False
            height: '30dp'

        Button:
            id: enviar
            text: 'Enviar'
            font_size: 20
            size_hint_y: None
            on_press: root.adicionar_banco()

        Button:
            text: 'Voltar para Estoque'
            size_hint_y: None
            on_press: app.root.current = "estoque"
