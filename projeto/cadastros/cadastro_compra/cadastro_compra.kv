<Cadastro_Compra>:
    name: "cadastro"
    produto_id: produto_id
    qntd_produto: qntd_produto
    enviar: enviar
    cols: 1

    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'Produto ID: '
            height: '30dp'

        TextInput:
            id: produto_id
            multiline: False
            height: '30dp'

        Label:
            text:'Quantidade: '
            height: '30dp'

        TextInput:
            id: qntd_produto
            multiline: False
            height: '30dp'

        Button:
            id: enviar
            text: 'ENVIAR'
            font_size: 30
            size_hint_y: None
            on_press: root.adicionar_banco()
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"

        Button:
            text: 'VOLTAR'
            size_hint_y: None
            font_size: 30
            on_press: root.manager.current = "telacadastro_compra"
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"
