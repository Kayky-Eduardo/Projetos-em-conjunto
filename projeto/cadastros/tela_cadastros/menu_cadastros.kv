<Menu_Cadastro>:
    cols: 1

    FloatLayout:
        Image:
            source: 'projeto/img/fundo.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}


        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 800, 600
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            spacing: 10
            
            Label:
                text:'CADASTRAR'
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                font_size: 120
                font_name: "fonte/fontetitulo"
                size_hint: None, None
                
            Button:
                text: 'CLIENTE'
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                font_size: 20
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_cliente"
                font_name: "fonte/fontebotao"

            Button:
                text: 'VENDA'
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_size: 20
                background_color: 00.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_venda"
                font_name: "fonte/fontebotao"

            Button:
                text: 'COMPRA'
                font_size: 20
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_compra"
                font_name: "fonte/fontebotao"

            Button:
                text: 'FUNCIONARIO'
                font_size: 20
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_funcionario"
                font_name: "fonte/fontebotao"

            Button:
                text: 'SETOR'
                font_size: 20
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_setor"
                font_name: "fonte/fontebotao"

            Button:
                text: 'CARGO'
                font_size: 20
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_cargo"
                font_name: "fonte/fontebotao"
            
            Button:
                text: 'ENCOMENDA'
                font_size: 20
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.manager.current = "telacadastro_encomenda"
                font_name: "fonte/fontebotao"
            
            Button:
                text: 'VOLTAR'
                font_size: 20
                size_hint: 0.4, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                on_press: root.manager.current = 'menu'
                background_color: 0.5, 0.5, 0.5, 1
                font_name: "fonte/fontebotao"

    
       
        