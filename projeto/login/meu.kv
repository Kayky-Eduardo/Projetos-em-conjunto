<MeuLayout>:
    cols: 1
    cpf: cpf
    senha: senha
    enviar: enviar

    GridLayout:
        cols: 2

        Label:
            text: "CPF: "

        TextInput:
            id: cpf
            multiline: False
            
        Label:
            text: "Senha: "

        TextInput:
            id: senha
            multiline: False
            password: not root.senha_visivel

        Button:
            text: "Mostrar" if not root.senha_visivel else "Ocultar"
            on_press: root.alternar_visibilidade()
            
    Button:
        id: enviar
        text: "Enviar"
        font_size: 20
        on_press: root.verificar()
