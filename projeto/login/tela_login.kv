<Tela_Login>:
    cpf: cpf
    senha: senha
    enviar: enviar

    FloatLayout:
    

        Image:
            source: 'projeto/img/fundo.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}

        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            width: 400

            Label:
                text:'L O G I N'
                pos_hint: {'center_x': 0.5, 'center_y': 0.10}
                font_size: 125
                font_name: "fonte/fontetitulo"
                size_hint_y: None
                height: 100
           
            TextInput:
                id: cpf
                hint_text: "CPF"
                multiline: False
                size_hint_y: None
                height: 30
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                font_name: "fonte/fontebotao"

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: None
                height: 30

                TextInput:
                    id: senha
                    hint_text: "SENHA"
                    multiline: False
                    password: not root.senha_visivel
                    height: 50
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    font_name: "fonte/fontebotao"

                ImageButton:
                    source: 'projeto/img/aberto.png' if root.senha_visivel else 'projeto/img/fechado.png'
                    size_hint: None, None
                    size: 20, 25
                    on_press: root.alternar_visibilidade()

            Button:
                id: enviar
                text: "ENVIAR"
                font_size: 18
                size_hint: None, None
                size: 400, 40
                on_press: root.verificar()
                background_color: 0.5, 0.5, 0.5, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                font_name: "fonte/fontebotao"
