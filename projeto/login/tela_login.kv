<Tela_Login>:
    cpf: cpf
    senha: senha
    enviar: enviar

    FloatLayout:
        Image:
            source: 'projeto/img/fundo.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}

        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            size_hint: None, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            width: 400 
     
            TextInput:
                id: cpf
                hint_text: "CPF"
                multiline: False
                size_hint_y: None
                height: 30
        

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: None
                height: 30

                TextInput:
                    id: senha
                    hint_text: "Senha"
                    multiline: False
                    password: not root.senha_visivel
                    height: 30

                ImageButton:
                    source: 'projeto/img/aberto.png' if root.senha_visivel else 'projeto/img/fechado.png'
                    size_hint: None, None
                    size: 20, 25
                    on_press: root.alternar_visibilidade()

            Button:
                id: enviar
                text: "Enviar"
                font_size: 18
                size_hint_y: None
                height: 40
                on_press: root.verificar()