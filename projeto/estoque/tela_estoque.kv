<Tela_Estoque>:
    name: "estoque"
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Button:
            text: 'CARREGAR'
            size_hint_y: None
            height: "70dp"
            on_press: root.atualizar_dados()
            font_size: 20
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"

        ScrollView:
            GridLayout:
                id: container
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True

        Button:
            text: 'CADASTRAR ESTOQUE'
            size_hint_y: None
            height: "40dp"
            on_press: root.manager.current = "cadastro_produto"
            font_size: 20
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"
        
        Button:
            text: 'VOLTAR'
            size_hint_y: None
            height: "40dp"
            on_press: root.manager.current = "menu"
            font_size: 20
            background_color: 0.5, 0.5, 0.5, 1
            font_name: "fonte/fontebotao"