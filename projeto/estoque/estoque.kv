<Tela_Estoque>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    Button:
        text: 'Carregar Produtos com Estoque'
        size_hint_y: None
        on_press: root.atualizar_dados()

    ScrollView:
        GridLayout:
            id: container
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '40dp'
            row_force_default: True