<Cadastro_Produto>
    produto_id: produto_id
    nome_produto: nome_produto
    tipo_produto: tipo_produto
    preco_produto: preco_produto
    qntd_produto: qntd_produto
    validade_produto: validade_produto
    enviar: enviar 
    cols: 1

    GridLayout:
        cols: 2
        
        Label:
            text:'Produto ID:'

        TextInput:
            id: produto_id
            multiline: False
            hint_text:'Digite aqui...'

        Label:
            text:'Nome do produto: '
        
        TextInput:
            id: nome_produto
            multiline: False
            hint_text:'Digite aqui...'

        Label:
            text:'tipo do produto: '

        TextInput:
            id: tipo_produto
            multiline: False
            hint_text:'Digite aqui...'

        Label:
            text: 'Pre√ßo produto: '

        TextInput:
            id: preco_produto
            multiline: False
            hint_text:'Digite aqui...'

        Label:
            text:'Quantidade do Produto'
        
        TextInput:
            id: qntd_produto
            multiline: False
            hint_text:'Digite aqui...'

        Label:
            text:'Validade do Produto'
        
        TextInput:
            id: validade_produto
            multiline: False
            hint_text:'ex: 2006-03-25'

    Button:
        id: enviar
        text: 'Enviar'
        font_size: 20
        on_press: root.adicionar_banco()